<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="224dp"
        android:layout_height="113dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/rcp_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="Juego RCP"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppTheme.Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/corazon1"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_favorite_red_24dp" />

    <ImageView
        android:id="@+id/viento1"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/corazon1"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/viento" />

    <ImageView
        android:id="@+id/viento2"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="68dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/corazon2"
        app:layout_constraintTop_toBottomOf="@+id/viento1"
        app:srcCompat="@drawable/viento" />

    <ImageView
        android:id="@+id/viento3"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="68dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/corazon3"
        app:layout_constraintTop_toBottomOf="@+id/viento2"
        app:srcCompat="@drawable/viento" />

    <ImageView
        android:id="@+id/viento4"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="68dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/corazon4"
        app:layout_constraintTop_toBottomOf="@+id/viento3"
        app:srcCompat="@drawable/viento" />

    <ImageView
        android:id="@+id/corazon2"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="64dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corazon1"
        app:srcCompat="@drawable/ic_favorite_red_24dp" />

    <ImageView
        android:id="@+id/corazon3"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="64dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corazon2"
        app:srcCompat="@drawable/ic_favorite_red_24dp" />

    <ImageView
        android:id="@+id/corazon4"
        android:layout_width="86dp"
        android:layout_height="74dp"
        android:layout_marginStart="64dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/corazon3"
        app:srcCompat="@drawable/ic_favorite_red_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

