<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:focusable="true"
    android:focusableInTouchMode="true">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="224dp"
        android:layout_height="113dp"
        android:layout_marginStart="78dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="78dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/rcp_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/viento1"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_progress_bar_paso6"
            app:srcCompat="@drawable/viento" />

        <ImageView
            android:id="@+id/viento2"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/viento1"
            app:layout_constraintTop_toBottomOf="@+id/view_progress_bar_paso6"
            app:srcCompat="@drawable/viento" />

        <ImageView
            android:id="@+id/viento3"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/viento2"
            app:layout_constraintTop_toBottomOf="@+id/view_progress_bar_paso6"
            app:srcCompat="@drawable/viento" />

        <ImageView
            android:id="@+id/viento4"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/viento3"
            app:layout_constraintTop_toBottomOf="@+id/view_progress_bar_paso6"
            app:srcCompat="@drawable/viento" />

        <ImageView
            android:id="@+id/viento5"
            android:layout_width="52dp"
            android:layout_height="45dp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/viento4"
            app:layout_constraintTop_toBottomOf="@+id/view_progress_bar_paso6"
            app:srcCompat="@drawable/viento" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gifImageView_paso6">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/view_progress_bar_paso6"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="113dp"
                android:layout_height="113dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:progressDrawable="@drawable/drawable_circularprogressbar"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_timer_paso6"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="48dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/view_progress_bar_paso6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/view_progress_bar_paso6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/textView2_paso6"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:text="PASO 6: PrÃ¡ctica de insuflaciones"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/aprendiendoRcp"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/AppTheme.Toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView_paso6"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:src="@drawable/insuflacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2_paso6" />

</androidx.constraintlayout.widget.ConstraintLayout>

